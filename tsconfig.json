{
    "compilerOptions": {
        "target": "es6",
        "module": "CommonJS",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": "./src",
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "exclude": ["./node_modules", "./dist"],
    "include": ["./src"]
}
